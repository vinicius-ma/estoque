<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_margin="8dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >
        <!-- Item Name -->
        <TextView
            android:id="@+id/product_item_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="start|center"
            android:lines="1"
            android:ellipsize="marquee"
            android:paddingVertical="8sp"
            android:scrollHorizontally="true"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/layout_id"
            app:layout_constraintEnd_toStartOf="@id/product_item_variables_layout"
            tools:text="Computador i5"
            />
        <!-- Id Layout -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginVertical="5dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                >
                <!-- item id -->
                <TextView
                    android:id="@+id/produto_item_id"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:paddingHorizontal="5sp"
                    android:paddingBottom="3sp"
                    app:layout_constraintTop_toBottomOf="@id/produto_item_id_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="123"
                    />
                <!-- id label-->
                <TextView
                    android:id="@+id/produto_item_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/produto_item_id"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="2sp"
                    android:text="id"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <!-- Variables Layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_item_variables_layout"
            android:layout_width="120dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorAccent2"
            >
            <!-- Price Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/price_Layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/stock_Layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <!-- Item Price -->
                <TextView
                    android:id="@+id/product_item_price"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingHorizontal="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:autoSizeTextType="uniform"
                    android:lines="1"
                    android:gravity="center"
                    android:textStyle="normal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="R$ 1000,00"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- Stock Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stock_Layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.35"
                app:layout_constraintTop_toBottomOf="@id/price_Layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="5dp"
                >
                <!-- Stock Label -->
                <TextView
                    android:id="@+id/stock_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/product_item_stock"
                    app:layout_constraintBottom_toBottomOf="@id/product_item_stock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/product_item_stock"
                    app:layout_constraintVertical_bias="0.2"
                    app:layout_constraintHorizontal_bias="1.0"
                    android:text="Qty"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@android:color/primary_text_light"
                    />
                <!-- Item Stock -->
                <TextView
                    android:id="@+id/product_item_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:textColor="@android:color/primary_text_light"
                    android:gravity="center"
                    android:textStyle="normal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/stock_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="100"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>